<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Verify Mobile No."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mobileShow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.25"
            android:enabled="false"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone" />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.25"
            android:ems="10"
            android:hint="Mobile No."
            android:inputType="phone" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sendOTP"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:layout_marginBottom="5dp"
            android:background="@color/Theme_elements"
            android:text="Send OTP"
            android:textColor="#FFFFFF"/>


        <android.support.design.widget.TextInputEditText
            android:id="@+id/OTP"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.25"
            android:ems="10"
            android:hint="OTP"
            android:inputType="numberPassword"
            android:visibility="gone"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/checkOTP"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.75"
            android:background="@color/Theme_elements"
            android:text="Verify"
            android:visibility="gone"
            android:textColor="#FFFFFF"/>


        <TextView
            android:id="@+id/resendOTP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:gravity="center"
            android:text="Haven't got OTP yet! Click here to send again"
            android:textColor="#3a6fd9"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/otpProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.CardView>